# Environment (test/development/production)
ENV=development

# Database (required)
DATABASE_URL=postgresql+asyncpg://consent:consent@localhost:5432/consent_db

# Authentication
# Options: api_key, oauth, none (none only for testing)
AUTH_PROVIDER=api_key

# API Key Auth (comma-separated key:client_id pairs)
# Generate secure keys for production!
API_KEYS=sk_dev_testkey123:dev_client

# OAuth Config (if AUTH_PROVIDER=oauth)
# OAUTH_ISSUER_URL=https://auth.example.com
# OAUTH_AUDIENCE=consent-mcp

# SMS Provider - Twilio (optional, only needed for SMS consent)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Provider - SendGrid (optional, only needed for email consent)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Consent Web Endpoints (for click-to-consent links)
# Set to your public URL where the consent server is hosted
CONSENT_BASE_URL=https://consent.example.com
WEB_SERVER_PORT=8080

# SMS Polling (optional - poll Twilio for SMS replies instead of webhooks)
SMS_POLLING_ENABLED=false
SMS_POLLING_INTERVAL=60
